<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/pdfBox"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_30sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:background="@drawable/sent_message_background"
    android:paddingHorizontal="@dimen/_5sdp"
    android:paddingVertical="@dimen/_8sdp">

    <ImageView
        android:id="@+id/pdfIcon"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:src="@drawable/file_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pdf_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:padding="8dp"
        android:text="Sent PDF"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/pdfIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/pdfIcon"
        android:layout_marginTop="@dimen/_10sdp"/>


    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/normal_text"
        android:textSize="@dimen/_10sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
